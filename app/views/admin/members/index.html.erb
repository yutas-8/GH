<%= link_to "管理者ログアウト", destroy_admin_session_path, method: :delete, class: "pull-right" %>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>社員ID</th>
      <th>氏名</th>
      <th>生年月日</th>
      <th>メールアドレス</th>
      <th>貰ったありがとう</th>
      <th>贈ったありがとう</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td><%= member.first_name + " " + member.last_name %></td>
      <td><%= member.birthday.strftime("%F") %></td>
      <td><%= member.email %></td>
      <td><%= member.to_thanks.count %></td>
      <td><%= member.from_thanks.count %></td>
      <td>
        <%= form_with model: member,url: admin_member_path(member), lacal: true do |f| %>
          <%= f.radio_button :is_delete, false %><%= f.label :is_delete, "在籍" %>
          <%= f.radio_button :is_delete, true %><%= f.label :is_delete, "退職" %>
          <%= f.submit "変更", class: "btn btn-default btn-xs" %>
        <% end %>
      </td>
      <% if member.is_delete == true %>
        <td><%= link_to "完全削除", admin_member_path(member), class: "btn btn-danger btn-xs", method: :delete, "date-confirm" => "完全に削除されます（復旧不可）" %></td>
      <% else %>
        <td><%= link_to "完全削除", admin_member_path(member), class: "btn btn-danger btn-xs",disabled:"disabled"%></td>
      <% end %>

    </tr>
    <% end %>
  </tbody>
</table>
