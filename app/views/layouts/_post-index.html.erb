  <% posts.each do |post| %>
    <div class="post_<%= post.id %>">
      <%= link_to post_path(post.id), class: "content-box btn btn-default" do %>
        <div class= "content-member_name">
          <%= attachment_image_tag post.member, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", class: "img-circle" %>
          <%= post.member.first_name + " " + post.member.last_name  %>
        </div>
        <div class= "content-header">
          <h4>【<%= post.title.truncate(16, omission: "...") %>】</h4>
        </div>
        <div class= "content-body">
          <%= post.body.truncate(12, omission: "...") %>
        </div>
        <div class="content-date">
          <%= post.created_at.strftime('%F %T') %>
        </div>
        <div class="content-icon">
          <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
          <div class="praise-count"><%= render "user/praises/praise-count", post: post %></div>
          <div class="cheering-count"><%= render "user/cheerings/cheering-count", post: post %></div>
        </div>
      <% end %>
    </div>
  <% end %>