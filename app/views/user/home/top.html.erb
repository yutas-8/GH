<div class= "row">
  <div class= "">
    <div>今日のありがとう<%= @today_thanks.count %>件</div>
    <div>今月のありがとう<%= @this_month_thanks.count %>件（前月比 : <%= @month_to_month_thanks %>）</div>
  </div>
  <div class= "col-xs-5">
    <table class="table table-striped">
      <tr><th colspan="3">贈ったありがとう順位</th></tr>
      <% @from_thank_ranks.each.with_index(1) do |from, i| %>
      <tr>
        <th>第<%= i %>位</th>
        <th><%= from.first_name + " " + from.last_name %></th>
        <td><%= from.from_thanks.count %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class= "col-xs-5">
    <table class="table table-striped">
      <tr><th colspan="3">貰ったありがとう順位</th></tr>
      <% @to_thank_ranks.each.with_index(1) do |to, i| %>
      <tr>
        <th>第<%= i %>位</th>
        <th><%= to.first_name + " " + to.last_name %></th>
        <td><%= to.to_thanks.count %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <!--新着投稿-->
  <div class="col-xs-4">
    <h3>投稿（直近5件）</h3>
    <%= render "layouts/post-index", posts: @posts %>
    <%= link_to "他の投稿も見る", posts_path %>
  </div>
  <div class="col-xs-5">
    <h3>ありがとう(直近5件)</h3>
    <%= render "layouts/thank_index", thanks: @thanks %>
  </div>
    <!--誕生日-->
  <div class="col-xs-3">
    <h3>誕生日</h3>
    <% if @birthday_members.any? %>
      <table class="table table-striped">
        <tbody>
          <% @birthday_members.each do |member| %>
          <tr>
            <td><%= member.first_name + " " + member.last_name %></td>
            <td><%= member.birthday.strftime("%m月%d日") %></td>
          </tr>
          <% end %>
          <% @next_birthday_members.each do |member| %>
          <tr>
            <td><%= member.first_name + " " + member.last_name %></td>
            <td><%= member.birthday.strftime("%m月%d日") %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>

</div>