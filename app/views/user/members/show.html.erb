<div class="row">
  <div class="col-xs-3">
    <%= attachment_image_tag @member, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg", class: "img-circle" %>
    <% if current_member %>
      <div>貰ったありがとう：<%= link_to current_member.to_thanks.count, tos_path %></div>
      <div>贈ったありがとう：<%= link_to current_member.from_thanks.count, froms_path %></div>
    <% else %>
      <div>貰ったありがとう：<%= current_member.to_thanks.count %></div>
      <div>贈ったありがとう：<%= current_member.from_thanks.count %></div>
    <% end %>
    <table class="table table-striped">
      <tr>
        <th>名前</th>
        <th><%= @member.first_name + @member.last_name %></th>
      </tr>
      <tr>
        <th>誕生日</th>
        <th><%= @member.birthday.strftime("%F") %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= @member.introduction %></th>
      </tr>
    </table>
    <%= link_to "編集", edit_member_path(current_member), class: "glyphicon glyphicon-pencil pull-right" %>
  </div>

  <div class="col-xs-9">
    <% @posts.each do |post| %>
    <div class= "post-box">
      <div class= "post-header">
        <%= link_to post.title, post_path(post.id) %>
      </div>
      <div class= "post-body">
        <%= post.body %>
      </div>
      <div class="post-date">
        <%= post.created_at.strftime('%F %T') %>
        <i class="fas fa-comment-dots">
          <%= post.post_comments.count %>
        </i>
        <i class="far fa-thumbs-up"></i>
        <i class="fas fa-hand-holding-heart"></i>
      </div>
    </div>
    <% end %>
  </div>
</div>
