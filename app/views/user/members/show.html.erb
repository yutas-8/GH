<div class="row">
  <div class="col-xs-3 content-box">
    <div class= "content-member_name">
    <%= attachment_image_tag @member, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg", class: "img-circle" %>
    </div>
    <% if current_member %>
      <div>貰ったありがとう：<%= link_to current_member.to_thanks.count, tos_path %></div>
      <div>贈ったありがとう：<%= link_to current_member.from_thanks.count, froms_path %></div>
    <% else %>
      <div>貰ったありがとう：<%= current_member.to_thanks.count %></div>
      <div>贈ったありがとう：<%= current_member.from_thanks.count %></div>
    <% end %>
    <table class="table table-striped">
      <tr>
        <th>名前</th>
        <th><%= @member.first_name + @member.last_name %></th>
      </tr>
      <tr>
        <th>誕生日</th>
        <th><%= @member.birthday.strftime("%F") %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @member.introduction %></td>
      </tr>
    </table>
    <%= link_to "", edit_member_path(current_member), class: "fas fa-edit content-icon" %>
  </div>

  <div class="col-xs-9">
    <% @posts.each do |post| %>
    <%= link_to post_path(post.id), class: "content-box btn btn-default" do %>
      <h4 class= "content-header">
        <%= post.title.truncate(20, omission: "...") %>
      </h4>
      <p class= "content-body">
        <%= post.body.truncate(30, omission: "...") %>
      </p>
      <div class="content-date">
        <%= post.created_at.strftime('%F') %>
      </div>
      <div class="content-icon">
        <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
        <div class="praise-count"><%= render "user/praises/praise-count", post: post %></div>
        <div class="cheering-count"><%= render "user/cheerings/cheering-count", post: post %></div>
      </div>
    <% end %>
    <% end %>
    <%= paginate @posts %>
  </div>
</div>
