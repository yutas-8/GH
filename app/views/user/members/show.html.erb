<div class="row">
  <div class="col-xs-3">
    <%= attachment_image_tag @member, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg", class: "img-circle" %>
    <table class="table table-striped">
      <tr>
        <th>名前</th>
        <th><%= @member.first_name + @member.last_name %></th>
      </tr>
      <tr>
        <th>誕生日</th>
        <th><%= @member.birthday.strftime("%F") %></th>
      </tr>
      <tr>
        <th>自己紹介</th>
        <th><%= @member.introduction %></th>
      </tr>
    </table>
    <%= link_to "編集", edit_member_path(current_member) %>
  </div>

  <div class="col-xs-9">
  </div>
</div>
