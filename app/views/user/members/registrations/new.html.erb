<div class="row">
  <%= render "layouts/error_message", model: @member %>
  <h2 class="col-xs-offset-2">新規登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label :姓 %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control-static col-xs-5" %>
    </div>
    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label :名 %><br />
      <%= f.text_field :last_name, autofocus: true, class: "form-control-static col-xs-5"  %>
    </div>

    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label "誕生日" %><br />
      <%= f.date_select :birthday, {use_month_numbers:true, start_year: 1940, end_year: (Time.current.year - 14), default: Date.new(1989, 1, 1)}, {class: "form-control-static bootstrap-date"} %>
    </div>

    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control-static col-xs-12"  %>
    </div>

    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control-static col-xs-12"  %>
    </div>

    <div class="form-group col-xs-8 col-xs-offset-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-static col-xs-12"  %>
    </div>

    <div class="actions col-xs-8 col-xs-offset-2">
      <%= f.submit "Sign up", class: "btn btn-success" %><br />
    </div>
  <% end %>
</div>